<body>

<div class="container">
    <h1>Bus Ticket Booking</h1>

    <label>Passenger Name</label>
    <input type="text" id="name" placeholder="Enter name">

    <label>Age</label>
    <input type="number" id="age" placeholder="Enter age">

    <label>Route</label>
    <select id="route">
        <option value="50">City A → City B (₹50)</option>
        <option value="50">City B → City C (₹50)</option>
    </select>

    <button onclick="calculateFare()">Book Ticket</button>

    <div class="result" id="result">
        <p id="msg"></p>
        <p class="price" id="price"></p>
        <p class="note" id="note"></p>
    </div>
</div>

<script>
    function calculateFare() {
        const name = document.getElementById("name").value;
        const age = parseInt(document.getElementById("age").value);
        const baseFare = parseInt(document.getElementById("route").value);

        if (name === "" || isNaN(age)) {
            alert("Please enter valid details");
            return;
        }

        let finalFare = baseFare;
        let note = "";

        if (age < 5) {
            finalFare = 0;
            note = "Free ticket for children below 5 years";
        } 
        else if (age >= 5 && age <= 9) {
            finalFare = baseFare * 0.5;
            note = "50% discount for children between 5 and 9 years";
        } 
        else if (age >= 10 && age < 60) {
            finalFare = baseFare;
            note = "Full ticket price applied";
        } 
        else {
            finalFare = baseFare * 0.6;
            note = "40% discount for senior citizens (60+)";
        }

        document.getElementById("result").style.display = "block";
        document.getElementById("msg").innerText = `Passenger: ${name}`;
        document.getElementById("price").innerText = `Final Fare: ₹${finalFare}`;
        document.getElementById("note").innerText = note;
    }
</script>

