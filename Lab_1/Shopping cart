<body>
  <h1>Shopping Bag & Wishlist</h1>
  <div class="buttons">
    <button id="addBag">Add Item to Bag</button>
    <button id="addWish">Add Item to Wishlist</button>
    <button id="removeBag">Remove Item from Bag</button>
    <button id="removeWish">Remove Item from Wishlist</button>
  </div>
  <div class="status">
    <p> Items in Bag: <span id="bagCount">0</span></p>
    <p> Items in Wishlist: <span id="wishCount">0</span></p>
  </div>

  <script>
    let bagCount = 0;
    let wishCount = 0;

    const bagDisplay = document.getElementById("bagCount");
    const wishDisplay = document.getElementById("wishCount");

    document.getElementById("addBag").addEventListener("click", () => {
      bagCount++;
      bagDisplay.textContent = bagCount;
    });

    document.getElementById("addWish").addEventListener("click", () => {
      wishCount++;
      wishDisplay.textContent = wishCount;
    });

    document.getElementById("removeBag").addEventListener("click", () => {
      if (bagCount > 0) {
        bagCount--;
        bagDisplay.textContent = bagCount;
      } else {
        alert("No items left in the bag to remove!");
      }
    });

    document.getElementById("removeWish").addEventListener("click", () => {
      if (wishCount > 0) {
        wishCount--;
        wishDisplay.textContent = wishCount;
      } else {
        alert("No items left in the wishlist to remove!");
      }
    });
  </script>
</body>
</html>
