  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      text-align: center;
      margin: 0;
      padding: 0;
      background: linear-gradient(135deg, #f4f4f9, #e0e7ff);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    h1 {
      color: #333;
      margin-bottom: 20px;
      font-size: 2.2em;
      text-shadow: 1px 1px 2px #ccc;
    }

    .buttons {
      margin: 20px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
    }

    button {
      padding: 12px 25px;
      font-size: 16px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    button:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

    #addBag {
      background: #4CAF50;
      color: white;
    }

    #addWish {
      background: #2196F3;
      color: white;
    }

    #removeBag {
      background: #f44336;
      color: white;
    }

    #removeWish {
      background: #ff9800;
      color: white;
    }

    .status {
      margin-top: 30px;
      font-size: 18px;
      color: #444;
